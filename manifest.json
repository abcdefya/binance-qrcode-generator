{
  "manifest_version": 3,
  "name": "Binance QR Code Generator",
  "version": "1.0",
  "description": "Tạo mã QR cho giao dịch chuyển khoản ngân hàng trên Binance",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.binance.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.binance.com/*"],
      "js": [
        "scripts/lib/fuse.min.js",
        "scripts/bankMapper.js",
        "scripts/domObserver.js",
        "scripts/transferInfoExtractor.js",
        "scripts/qrGenerator.js",
        "scripts/qrDisplay.js",
        "scripts/settingsManager.js",
        "scripts/main.js",
        "scripts/content.js"
      ],
      "css": []
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["bankList.json", "scripts/lib/fuse.min.js"],
      "matches": ["https://www.binance.com/*"]
    }
  ]
}
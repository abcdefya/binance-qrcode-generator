{
  "manifest_version": 3,
  "name": "Tạo Mã QR Chuyển Khoản",
  "version": "1.0",
  "description": "Tự động tạo mã QR cho chuyển khoản ngân hàng khi phát hiện HTML phù hợp.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/vendor.bundle.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["bankList.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}